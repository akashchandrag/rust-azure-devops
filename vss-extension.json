{
    "manifestVersion": 1,
    "id": "rust-vsts",
    "version": "1.0.{buildNumber}",
    "name": "Rust",
    "description": "Rust extension for Visual Studio Team Services",
    "publisher": "spontoreau",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services.Cloud"
        }
    ],
    "categories": [
        "Build and release"
    ],
    "icons": {
        "default": "icon.png"
    },
    "screenshots": [
        {
            "path": "images/screenshot-tasks.png"
        },
        {
            "path": "images/screenshot-cargo.png"
        },
        {
            "path": "images/screenshot-install.png"
        }
    ],
    "content": {
        "details": {
            "path": "DETAILS.md"
        },
        "license": {
            "path": "LICENSE"
        }
    },
    "links": {
        "support": {
            "uri": "https://github.com/spontoreau/rust-vsts/issues"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/spontoreau/rust-vsts"
    },
    "tags": [
        "rust",
        "cargo",
        "rustup",
        "rustc",
        "build"
    ],
    "files": [
        {
            "path": "tasks/cargo"
        },
        {
            "path": "tasks/install"
        },
        {
            "path": "tasks/rustup"
        },
        {
            "path": "tasks/rustc"
        },
        {
            "path": "images",
            "addressable": true
        }
    ],
    "contributions": [
        {
            "id": "rust-install",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/install"
            }
        },
        {
            "id": "rust-cargo",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/cargo"
            }
        },
        {
            "id": "rust-rustup",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/rustup"
            }
        },
        {
            "id": "rust-rustc",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/rustc"
            }
        }
    ]
}